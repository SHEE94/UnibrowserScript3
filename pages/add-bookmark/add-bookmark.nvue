<template>
	<view class="bookmark-edit-content">
		<input type="text"  placeholder="title" class="input-text" v-model="info.title"/>
		<input type="text"  placeholder="url" class="input-text" v-model="info.url"/>
		<button type="default" @click="confirm">确认</button>
	</view>
</template>

<script>
/**
 *@description: 添加书签
 *@author: Xianxu
 *@date: 2024-02-02
 *@version: 3.0
 *@Copyright: Xianxu
 *@LastEditors: Xianxu
 *@LastEditTime: 2024-02-02
 */

const app = getApp()
export default {
	data() {
		return {
			info:{}
		};
	},
	onReady() {
		
		
	},
	onLoad(options) {
		this.id = options.id
		if(this.id){
			this.info = app.globalData.webview.Bookmark.get(this.id)
			
		}else{
			this.webview = app.globalData.webview;
			let actionWeb = this.webview.checkedActiveWebview();
			this.info.title = actionWeb.getTitle();
			this.info.url = this.webview.getURL();
		}
	},
	methods:{
		confirm(){
			if(this.id){
				 this.webview.Bookmark.update(this.info)
				 uni.navigateBack()
				return;
			}
			this.webview.Bookmark.add({
				url:this.info.url,
				title:this.info.title,
				isDir:false
			})
			uni.$emit('UPDATE-BOOKMARK')
			uni.navigateBack()
		}
	}
};
</script>

